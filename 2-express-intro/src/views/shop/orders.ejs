<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../includes/head.ejs') %>
	</head>

	<body>
		<%- include('../includes/navigation.ejs') %>
		<main>
			<% if(!orders.length) { %>
			<h1>You do not have any orders.</h1>
			<% } else { %>
			<ul>
				<% orders.forEach(order => { %>
				<li>
					<h2>#<%= order.id %></h2>
					<ul>
						<% order.products.forEach(item => { %>
						<li>
							<%= item.title %> (<%= item.orderItem.quantity %>)
						</li>
						<% }); %>
					</ul>
				</li>
				<% }); %>
			</ul>
			<% } %>
		</main>
	</body>
</html>
